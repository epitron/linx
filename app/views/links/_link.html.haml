.link
  %span.date= link.created_at.strftime("%Y-%m-%d @ %l%P")
  %span.title= link_to highlight(link.title, @query), link.url
  - buttons = [ (link_to("cached", snapshot_path(link)) if link.mhtml) , link_to("archive.org", "http://web.archive.org/#{link.url}") ]
  ( #{buttons.compact.join(" | ").html_safe} )

  .details
    .desc= highlight(link.description, @query)
    .tags
      - link.tags.each do |tag|
        %span.tag= link_to tag.name, "?tag=#{tag.name}"

  